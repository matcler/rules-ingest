{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://ghostplaier.local/schemas/rules-ingest/rules.transitions.schema.json",
    "title": "Rules-Ingest Transition Rule",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "schemaVersion",
        "id",
        "scenario",
        "kind",
        "name",
        "pack",
        "source",
        "extraction",
        "eventType",
        "operations"
    ],
    "properties": {
        "schemaVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_.:-]+$"
        },
        "scenario": {
            "type": "string",
            "enum": [
                "SCENARIO_1",
                "SCENARIO_2",
                "SCENARIO_3",
                "SCENARIO_4",
                "SCENARIO_5"
            ]
        },
        "kind": {
            "type": "string",
            "enum": [
                "transition",
                "transition_rule"
            ]
        },
        "name": {
            "type": "string",
            "minLength": 1
        },
        "pack": {
            "type": "string",
            "pattern": "^[A-Z0-9_]+$"
        },
        "source": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "corpus",
                "ref"
            ],
            "properties": {
                "corpus": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[A-Z0-9_.:-]+$"
                },
                "ref": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-z][a-z0-9_]*(\\.[a-z][a-z0-9_]*)*$"
                }
            }
        },
        "extraction": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "method",
                "date",
                "pageStart",
                "pageEnd"
            ],
            "properties": {
                "method": {
                    "type": "string",
                    "enum": [
                        "manual",
                        "llm"
                    ]
                },
                "model": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "pageStart": {
                    "type": "integer",
                    "minimum": 0
                },
                "pageEnd": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "eventType": {
            "type": "string",
            "enum": [
                "ACTION_RESOLVED"
            ]
        },
        "operations": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "type"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "consume_resource",
                            "apply_condition",
                            "remove_condition",
                            "spawn_area",
                            "despawn_area",
                            "set_flag",
                            "clear_flag"
                        ]
                    },
                    "params": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        }
    }
}
